<%= render @publication %>

<div>

  <% if user_signed_in? %>
<!-- se agrega tb lo de curren user admin para que tb pueda ver los enlaces-->
    <% if current_user.admin? || current_user.id == @publication.user_id %>
        <%= link_to "Editar this publication (enlace vista show de publication)", edit_publication_path(@publication) %> |
        <%= button_to "Destroy this publication(enlace vista show de publication)", @publication, method: :delete %>
    <% end %>
  <% end %>

  <%= link_to "Volver to publications", publications_path %>
</div>

<% @comments.each do |comment| %>
 <% if current_user.admin? || current_user.id == comment.user_id %>
  <p><strong>Nombreee: </strong><%= comment.user.name %></p>
  <p><strong>Contenido: </strong><%= comment.content %></p>
  <%= link_to "Editar este comentario", edit_comment_path(comment) %> <!--- esto para editar y eliminar comentarios-->
  <%= button_to "Destroy este comentario", comment, method: :delete %>
  <% end %>
<% end %>

