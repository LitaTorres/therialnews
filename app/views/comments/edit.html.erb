<h1>Edita tú comentario </h1>

<%= form_with(model: @comment) do |form| %>
  <% if @comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@comment.errors.count, "error") %> Prohibido guardar este comentario: </h2>

      <ul>
        <% @comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, "Comentario", style: "display: block" %>
    <%= form.text_field :content, class: "form-control" %> 
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :user_id, "Id del Usuario", style: "display: block" %>
    <%= form.text_field :user_id, class: "form-control" %> 
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :publication_id, "Id de la publicación", style: "display: block" %>
    <%= form.text_field :publication_id, class: "form-control" %>
  </div>

  <div style="margin-top: 10px;">
    <%= form.submit "Enviar", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Muestra este comentario", @comment , class:"btn btn-secondary"%> 
  <%= link_to "Volver a todas las publicaciones", publications_path, class:"btn btn-dark" %>
</div>
